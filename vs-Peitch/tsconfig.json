{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "rootDir": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "webpack.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "tests"
  ]
}
