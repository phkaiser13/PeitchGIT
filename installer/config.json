{
  "package_metadata": {
    "name": "phgit",
    "version": "1.0.0",
    "maintainer": "Pedro Henrique / phkaiser13 <phkaiser13@users.noreply.github.com>",
    "description": "A Git helper tool with integrated workflows for Terraform and Vault.",
    "homepage": "https://github.com/phkaiser13/phgit"
  },
  "dependencies": [
    {
      "name": "git",
      "min_version": "2.20.0",
      "is_required": true
    },
    {
      "name": "terraform",
      "min_version": "1.0.0",
      "is_required": false
    },
    {
      "name": "vault",
      "min_version": "1.10.0",
      "is_required": false
    }
  ],
  "api_endpoints": [
    {
      "name": "git_for_windows",
      "type": "github",
      "url_template": "https://api.github.com/repos/{owner}/{repo}/releases/latest",
      "owner": "git-for-windows",
      "repo": "git"
    },
    {
      "name": "terraform",
      "type": "hashicorp",
      "url_template": "https://api.releases.hashicorp.com/v1/releases/{product_name}/latest",
      "product_name": "terraform"
    },
    {
      "name": "vault",
      "type": "hashicorp",
      "url_template": "https://api.releases.hashicorp.com/v1/releases/{product_name}/latest",
      "product_name": "vault"
    }
  ]
}
